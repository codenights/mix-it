{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "rootDir": ".",
    "types": ["webpack-env", "jest", "gapi", "gapi.auth2"],
    "baseUrl": ".",
    "paths": {
      "@core/*": ["packages/core/src/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "exclude": [
    "node_modules"
  ]
}
